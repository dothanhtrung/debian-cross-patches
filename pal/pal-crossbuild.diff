@@ -24,7 +24,11 @@ build-indep:
 build-arch: build-stamp
 build-stamp: $(QUILT_STAMPFN)
 	dh_testdir
-	$(MAKE) "CFLAGS=$(CFLAGS)"
+	if [ "$(DEB_BUILD_GNU_TYPE)" != "$(DEB_HOST_GNU_TYPE)" ]; then \
+                PKG_CONFIG_PATH=/usr/lib/$(DEB_HOST_GNU_TYPE)/pkgconfig $(MAKE) CC="$(DEB_HOST_GNU_TYPE)-gcc" "CFLAGS=$(CFLAGS)"; \
+        else \
+                $(MAKE) "CFLAGS=$(CFLAGS)"; \
+        fi
 	touch $@
 
